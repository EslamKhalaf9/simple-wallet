generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id              String   @id @default(cuid())
  firstname       String
  lastname        String
  email           String   @unique
  nid             String
  nid_expire_date String
  government      String
  city            String
  address         String
  job             String   @default("")
  password        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
